#!/usr/bin/python3

import os
import subprocess
import socket
import sys
import time
from struct import *

import mosquitto


def on_connect(mosq, obj, rc):
    if rc != 0:
        exit(rc)
    else:
        mosq.publish("retain/qos0/test", "retained message", 0, True)

run = -1
mosq = mosquitto.Mosquitto("retain-qos0-test", run)
mosq.on_connect = on_connect

mosq.connect("localhost", 1888)
while run == -1:
    mosq.loop()

exit(run)
